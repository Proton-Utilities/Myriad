{
    "openComposedOutput": true,

    "deployment": {
        "enabled": true,
        "github": {
            "enabled": true,
            "owner": "biggaboy212",
            "repo": "Myriad"
        }
    },

    "testing": {
        "enabled": true,
        "inputDir": "tests",
        "outputDir": "generated/tests",
        "frame": "pipeline/frames/stable.luau",
        "darkluaConfig": "pipeline/darklua/unminified.json"
    },

    "buildConfigs": [
        {
            "name": "Debug",

            "promptVersion": false,
            "promptDeploy": false,

            "frame": "pipeline/frames/stable.luau",
            "darkluaConfig": "pipeline/darklua/unminified.json",
            "input": "src/main.luau",
            "output": "generated/debug/myriad.luau"
        },

        {
            "name": "Beta",

            "promptVersion": true,
            "promptDeploy": true,
            "prerelease": true,

            "frame": "pipeline/frames/stable.luau",
            "darkluaConfig": "pipeline/darklua/stable.json",
            "input": "src/main.luau",
            "output": "generated/beta/myriad.luau",
            "variants": [
                {
                    "name": "Legacy-Support",
                    "darkluaConfig": "pipeline/darklua/stable.json",
                    "output": "generated/beta/pre.luau"
                },
                {
                    "name": "Unminified",
                    "darkluaConfig": "pipeline/darklua/unminified.json",
                    "output": "generated/beta/myriad-unminified.luau"
                }
            ]
        },

        {
            "name": "Release",
            
            "promptVersion": true,
            "promptDeploy": true,

            "frame": "pipeline/frames/stable.luau",
            "darkluaConfig": "pipeline/darklua/stable.json",
            "input": "src/main.luau",
            "output": "generated/release/myriad.luau",
            "variants": [
                {
                    "name": "Legacy-Support",
                    "darkluaConfig": "pipeline/darklua/stable.json",
                    "output": "generated/release/release.luau",
                    "frame": "pipeline/frames/legacy.luau"
                },
                {
                    "name": "Unminified",
                    "darkluaConfig": "pipeline/darklua/unminified.json",
                    "output": "generated/release/myriad-unminified.luau"
                }
            ]
        }
  ]
}